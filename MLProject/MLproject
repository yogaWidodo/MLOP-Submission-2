name: LSTM_Gold_Price_Prediction

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      units: {type: int, default: 64}
      dropout_rate: {type: float, default: 0.2}
      epochs: {type: int, default: 150}
      batch_size: {type: int, default: 32}
      window_size: {type: int, default: 60}
    command: >
      bash -c "cd $MLFLOW_PROJECT_DIR && python modelling.py --units {units} --dropout_rate {dropout_rate} --epochs {epochs} --batch_size {batch_size} --window_size {window_size}"
